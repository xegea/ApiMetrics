generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestResult {
  id           String   @id @default(uuid())
  testId       String   @unique
  avgLatency   Float
  p95Latency   Float
  successRate  Float
  timestamp    DateTime
  project      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([testId])
  @@index([timestamp])
  @@map("test_results")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

