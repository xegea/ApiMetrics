generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// Multi-tenancy root: represents an organization/account
model Tenant {
  id         String         @id @default(uuid())
  name       String
  plan       String         @default("free") // free | pro | enterprise
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  users      User[]
  executionPlans ExecutionPlan[]
  testRequests TestRequest[]
  loadTestExecutions LoadTestExecution[]

  @@map("tenants")
}

/// User roles within a tenant
enum Role {
  ADMIN
  MEMBER
}

model LoadTestExecution {
  id              String   @id @default(uuid())
  tenantId        String
  userId          String
  executionPlanId String?  // Optional: execution plan is just a template reference
  name            String   // e.g., "Plan Name - 2023-11-10 14:30:00"
  status          String   @default("running") // running, completed, failed
  // Summary metrics from latest test result
  avgLatency      Float?   // Average latency in nanoseconds
  p95Latency      Float?   // P95 latency in nanoseconds
  successRate     Float?   // Success rate as decimal (0-1)
  resultTimestamp DateTime? // Timestamp of when results were recorded
  // Detailed metrics from latest Vegeta run
  minLatency      Float?   // Minimum latency in nanoseconds
  maxLatency      Float?   // Maximum latency in nanoseconds
  p50Latency      Float?   // P50 latency in nanoseconds
  p99Latency      Float?   // P99 latency in nanoseconds
  totalRequests   Int?     // Total number of requests made
  testDuration    String?  // Duration of the test (e.g., "30.001s")
  actualRate      Float?   // Actual RPS achieved
  throughput      Float?   // Throughput in req/sec
  bytesIn         Int?     // Total bytes received
  bytesOut        Int?     // Total bytes sent
  statusCodes     String?  // JSON string of status code counts
  errorDetails    String?  // JSON string of error details
  // Immutable snapshot of execution plan data at creation time
  planName        String?  // Snapshot of execution plan name
  planExecutionTime String? // Snapshot of execution time
  planIterations  Int?     // Snapshot of iterations
  planDelayBetweenRequests String? // Snapshot of delay between requests
  planTestRequests String? // JSON string of test requests snapshot
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant        Tenant        @relation(fields: [tenantId], references: [id])
  executionPlan ExecutionPlan? @relation(fields: [executionPlanId], references: [id])
  testResults   TestResult[]  @relation("ExecutionToResults")
  metricsBuckets MetricsBucket[] @relation("ExecutionToBuckets")

  @@index([tenantId])
  @@index([userId])
  @@index([executionPlanId])
  @@map("load_test_executions")
}

model TestResult {
  id              String   @id @default(uuid())
  loadTestExecutionId String
  testId          String   // UUID of the test
  // Result fields
  avgLatency      Float?   // Average latency in nanoseconds
  p95Latency      Float?   // P95 latency in nanoseconds
  successRate     Float?   // Success rate as decimal (0-1)
  timestamp       DateTime @default(now())
  // Detailed metrics from Vegeta
  minLatency      Float?   // Minimum latency in nanoseconds
  maxLatency      Float?   // Maximum latency in nanoseconds
  p50Latency      Float?   // P50 latency in nanoseconds
  p99Latency      Float?   // P99 latency in nanoseconds
  totalRequests   Int?     // Total number of requests made
  testDuration    String?  // Duration of the test (e.g., "30.001s")
  actualRate      Float?   // Actual RPS achieved
  throughput      Float?   // Throughput in req/sec
  bytesIn         Int?     // Total bytes received
  bytesOut        Int?     // Total bytes sent
  statusCodes     String?  // JSON string of status code counts
  errorDetails    String?  // JSON string of error details
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  loadTestExecution LoadTestExecution @relation("ExecutionToResults", fields: [loadTestExecutionId], references: [id], onDelete: Cascade)
  requestMetrics    RequestMetric[]   @relation("ResultToRequestMetrics")
  requestMetricSummaries RequestMetricSummary[] @relation("ResultToRequestMetricSummaries")
  metricsBuckets    MetricsBucket[]   @relation("ResultToBuckets")

  @@index([loadTestExecutionId])
  @@map("test_results")
}

/// Individual request metrics from vegeta attack
model RequestMetric {
  id              String   @id @default(uuid())
  testResultId    String
  // Per-request metrics from vegeta
  timestamp       DateTime // When the request was made
  latency         Int      // Response latency in nanoseconds
  statusCode      Int      // HTTP status code (e.g., 200, 404, 500)
  bytesIn         Int      // Bytes received
  bytesOut        Int      // Bytes sent
  error           String?  // Error message if the request failed
  body            String?  @db.Text // Response body (optional, for storage)
  createdAt       DateTime @default(now())

  testResult      TestResult @relation("ResultToRequestMetrics", fields: [testResultId], references: [id], onDelete: Cascade)

  @@index([testResultId])
  @@index([testResultId, timestamp])
  @@map("request_metrics")
}

/// Aggregated request metrics per request type
model RequestMetricSummary {
  id              String   @id @default(uuid())
  testResultId    String
  requestIndex    Int      // Index of the request in the execution plan
  method          String   // HTTP method (GET, POST, etc.)
  target          String   // Request URL/target
  totalRequests   Int      // Total requests made for this type
  avgLatency      BigInt   // Average latency in nanoseconds
  minLatency      BigInt   // Minimum latency in nanoseconds
  maxLatency      BigInt   // Maximum latency in nanoseconds
  p50Latency      BigInt   // P50 latency in nanoseconds
  p95Latency      BigInt   // P95 latency in nanoseconds
  p99Latency      BigInt   // P99 latency in nanoseconds
  successRate     Float    // Success rate (0-1)
  bytesIn         Int      // Total bytes received
  bytesOut        Int      // Total bytes sent
  statusCodes     String   // JSON string of status code counts
  errors          String   // JSON string of error messages
  createdAt       DateTime @default(now())

  testResult      TestResult @relation("ResultToRequestMetricSummaries", fields: [testResultId], references: [id], onDelete: Cascade)

  @@index([testResultId])
  @@map("request_metric_summaries")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password or placeholder when using external auth
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  executionPlans ExecutionPlan[]
  testRequests TestRequest[]
  loadTestExecutions LoadTestExecution[]

  @@index([tenantId])
  @@map("users")
}

model ExecutionPlan {
  id          String   @id @default(uuid())
  tenantId    String   // Tenant ID for grouping users
  userId      String   // User who created the execution plan
  name        String   // Name of the execution plan
  executionTime String? @default("1m") // e.g., "30s", "5m", "1h"
  delayBetweenRequests String? @default("100ms") // e.g., "100ms", "1s"
  iterations  Int?     @default(1) // Number of test iterations
  rampUpPeriods String? // JSON array of ramp up periods: [{initTime, endTime, virtualUsers}, ...]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id])
  testRequests TestRequest[]
  loadTestExecutions LoadTestExecution[]

  @@index([tenantId])
  @@index([userId])
  @@map("execution_plans")
}

model TestRequest {
  id          String   @id @default(uuid())
  tenantId    String   // Tenant ID for grouping users
  userId      String   // User who created the request
  executionPlanId String // Execution plan this request belongs to
  orderId     Int      @default(0) // Order within the execution plan
  endpoint    String   // Full URL like https://api.example.com/v1/health
  httpMethod  String   // GET, POST, PUT, DELETE, etc.
  requestBody String?  @db.Text // Request body/payload for POST/PUT/PATCH
  headers     String?  @db.Text // HTTP headers (one per line)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id])
  executionPlan ExecutionPlan @relation(fields: [executionPlanId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([executionPlanId])
  @@index([executionPlanId, orderId])
  @@index([tenantId, endpoint, httpMethod])
  @@map("test_requests")
}

/// Time-windowed metrics buckets from streaming Vegeta execution
model MetricsBucket {
  id                    String   @id @default(uuid())
  loadTestExecutionId   String
  testResultId          String
  bucketNumber          Int      // Sequential bucket number (0, 1, 2, ...)
  startTime             DateTime // Start of the 5-second window
  endTime               DateTime // End of the 5-second window
  totalRequests         Int      // Total requests in this bucket
  successCount          Int      // Successful requests (2xx status)
  failureCount          Int      // Failed requests
  avgLatency            Float    // Average latency in milliseconds
  minLatency            Float    // Minimum latency in milliseconds
  maxLatency            Float    // Maximum latency in milliseconds
  p50Latency            Float    // 50th percentile latency in milliseconds
  p95Latency            Float    // 95th percentile latency in milliseconds
  p99Latency            Float    // 99th percentile latency in milliseconds
  successRate           Float    // Success rate as decimal (0-1)
  bytesIn               Int      // Total bytes received
  bytesOut              Int      // Total bytes sent
  statusCodes           String   // JSON string of status code distribution
  errors                String   // JSON array of unique errors
  createdAt             DateTime @default(now())

  loadTestExecution LoadTestExecution @relation("ExecutionToBuckets", fields: [loadTestExecutionId], references: [id], onDelete: Cascade)
  testResult TestResult @relation("ResultToBuckets", fields: [testResultId], references: [id], onDelete: Cascade)

  @@unique([testResultId, bucketNumber])
  @@index([loadTestExecutionId])
  @@index([testResultId])
  @@index([loadTestExecutionId, bucketNumber])
  @@map("metrics_buckets")
}
