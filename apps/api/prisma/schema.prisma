// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// Multi-tenancy root: represents an organization/account
model Tenant {
  id         String         @id @default(uuid())
  name       String
  plan       String         @default("free") // free | pro | enterprise
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  users      User[]
  endpoints  TestEndpoint[]
  results    TestResult[]

  @@map("tenants")
}

/// User roles within a tenant
enum Role {
  ADMIN
  MEMBER
}

model TestResult {
  id           String   @id @default(uuid())
  testId       String
  avgLatency   Float
  p95Latency   Float
  successRate  Float
  timestamp    DateTime
  project      String?
  tenantId     String
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([testId])
  @@index([timestamp])
  @@index([tenantId])
  @@index([userId])
  @@index([tenantId, testId])
  @@map("test_results")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password or placeholder when using external auth
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  endpoints TestEndpoint[]
  results   TestResult[]

  @@index([tenantId])
  @@map("users")
}

model TestEndpoint {
  id          String   @id @default(uuid())
  tenantId    String   // Tenant ID for grouping users
  userId      String   // User who created the endpoint
  endpoint    String   // Full URL like https://api.example.com/v1/health
  httpMethod  String   // GET, POST, PUT, DELETE, etc.
  requestBody String?  @db.Text // Request body/payload for POST/PUT/PATCH
  headers     String?  @db.Text // HTTP headers (one per line)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([userId])
  @@index([tenantId, endpoint, httpMethod])
  @@map("test_endpoints")
}
