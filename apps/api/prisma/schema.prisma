generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// Multi-tenancy root: represents an organization/account
model Tenant {
  id         String         @id @default(uuid())
  name       String
  plan       String         @default("free") // free | pro | enterprise
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  users      User[]
  executionPlans ExecutionPlan[]
  testRequests TestRequest[]
  loadTestExecutions LoadTestExecution[]

  @@map("tenants")
}

/// User roles within a tenant
enum Role {
  ADMIN
  MEMBER
}

model LoadTestExecution {
  id              String   @id @default(uuid())
  tenantId        String
  userId          String
  executionPlanId String?  // Optional: execution plan is just a template reference
  name            String   // e.g., "Plan Name - 2023-11-10 14:30:00"
  status          String   @default("running") // running, completed, failed
  // Summary metrics from latest test result
  avgLatency      Float?   // Average latency in nanoseconds
  p95Latency      Float?   // P95 latency in nanoseconds
  successRate     Float?   // Success rate as decimal (0-1)
  resultTimestamp DateTime? // Timestamp of when results were recorded
  // Detailed metrics from latest Vegeta run
  minLatency      Float?   // Minimum latency in nanoseconds
  maxLatency      Float?   // Maximum latency in nanoseconds
  p50Latency      Float?   // P50 latency in nanoseconds
  p99Latency      Float?   // P99 latency in nanoseconds
  totalRequests   Int?     // Total number of requests made
  testDuration    String?  // Duration of the test (e.g., "30.001s")
  actualRate      Float?   // Actual RPS achieved
  throughput      Float?   // Throughput in req/sec
  bytesIn         Int?     // Total bytes received
  bytesOut        Int?     // Total bytes sent
  statusCodes     String?  // JSON string of status code counts
  errorDetails    String?  // JSON string of error details
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant        Tenant        @relation(fields: [tenantId], references: [id])
  executionPlan ExecutionPlan? @relation(fields: [executionPlanId], references: [id])
  testResults   TestResult[]  @relation("ExecutionToResults")

  @@index([tenantId])
  @@index([userId])
  @@index([executionPlanId])
  @@map("load_test_executions")
}

model TestResult {
  id              String   @id @default(uuid())
  loadTestExecutionId String
  testId          String   // UUID of the test
  // Result fields
  avgLatency      Float?   // Average latency in nanoseconds
  p95Latency      Float?   // P95 latency in nanoseconds
  successRate     Float?   // Success rate as decimal (0-1)
  timestamp       DateTime @default(now())
  // Detailed metrics from Vegeta
  minLatency      Float?   // Minimum latency in nanoseconds
  maxLatency      Float?   // Maximum latency in nanoseconds
  p50Latency      Float?   // P50 latency in nanoseconds
  p99Latency      Float?   // P99 latency in nanoseconds
  totalRequests   Int?     // Total number of requests made
  testDuration    String?  // Duration of the test (e.g., "30.001s")
  actualRate      Float?   // Actual RPS achieved
  throughput      Float?   // Throughput in req/sec
  bytesIn         Int?     // Total bytes received
  bytesOut        Int?     // Total bytes sent
  statusCodes     String?  // JSON string of status code counts
  errorDetails    String?  // JSON string of error details
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  loadTestExecution LoadTestExecution @relation("ExecutionToResults", fields: [loadTestExecutionId], references: [id], onDelete: Cascade)

  @@index([loadTestExecutionId])
  @@map("test_results")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password or placeholder when using external auth
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  executionPlans ExecutionPlan[]
  testRequests TestRequest[]
  loadTestExecutions LoadTestExecution[]

  @@index([tenantId])
  @@map("users")
}

model ExecutionPlan {
  id          String   @id @default(uuid())
  tenantId    String   // Tenant ID for grouping users
  userId      String   // User who created the execution plan
  name        String   // Name of the execution plan
  executionTime String? @default("1m") // e.g., "30s", "5m", "1h"
  delayBetweenRequests String? @default("100ms") // e.g., "100ms", "1s"
  iterations  Int?     @default(1) // Number of test iterations
  rampUpPeriods String? // JSON array of ramp up periods: [{initTime, endTime, virtualUsers}, ...]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id])
  testRequests TestRequest[]
  loadTestExecutions LoadTestExecution[]

  @@index([tenantId])
  @@index([userId])
  @@map("execution_plans")
}

model TestRequest {
  id          String   @id @default(uuid())
  tenantId    String   // Tenant ID for grouping users
  userId      String   // User who created the request
  executionPlanId String // Execution plan this request belongs to
  orderId     Int      @default(0) // Order within the execution plan
  endpoint    String   // Full URL like https://api.example.com/v1/health
  httpMethod  String   // GET, POST, PUT, DELETE, etc.
  requestBody String?  @db.Text // Request body/payload for POST/PUT/PATCH
  headers     String?  @db.Text // HTTP headers (one per line)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id])
  executionPlan ExecutionPlan @relation(fields: [executionPlanId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([executionPlanId])
  @@index([executionPlanId, orderId])
  @@index([tenantId, endpoint, httpMethod])
  @@map("test_requests")
}
