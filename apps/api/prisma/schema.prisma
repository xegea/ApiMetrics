// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model TestResult {
  id           String   @id @default(uuid())
  testId       String   @unique
  avgLatency   Float
  p95Latency   Float
  successRate  Float
  timestamp    DateTime
  project      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([testId])
  @@index([timestamp])
  @@map("test_results")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed password
  tenantId  String?  // Optional tenant ID for multi-tenancy
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  endpoints TestEndpoint[]

  @@index([tenantId])
  @@map("users")
}

model TestEndpoint {
  id          String   @id @default(uuid())
  tenantId    String   // Tenant ID for grouping users
  userId      String   // User who created the endpoint
  endpoint    String   // Full URL like https://api.example.com/v1/health
  httpMethod  String   // GET, POST, PUT, DELETE, etc.
  requestBody String?  @db.Text // Request body/payload for POST/PUT/PATCH
  headers     String?  @db.Text // HTTP headers (one per line)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([tenantId, endpoint, httpMethod])
  @@map("test_endpoints")
}
